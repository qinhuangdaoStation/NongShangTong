<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--
        android design library提供的TabLayout控件
        tabIndicatorColor：菜单下方移动的横线的颜色
        tabSelectedTextColor ：菜单被选中之后的颜色
        tabTextColor : 菜单正常的颜色
        app:tabTextAppearance : 添加样式，这里加了样式主要是
        为了在文字前面加一个图所用，就是把textAllCaps设置成false
        (这里我们不用图标)

    -->
    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout_mall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/white"
        android:background="@color/titleBlue"
        app:tabSelectedTextColor="@color/gray"
        app:tabTextColor="@color/white"
        app:tabTextAppearance="@style/tablayoutIcon">
</android.support.design.widget.TabLayout>

    <ListView
        android:id="@+id/listView_mall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
    </ListView>

</LinearLayout>
